// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["name", "threshold", "description"],
	"permission": {
		"read": true,
		"create": false,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"title": "名称",
			"trim": "both",
			"maxLength": 10,
			"minLength": 1
		},
		"threshold": {
			"bsonType": "object",
			"title": "阈值"
		},
		"description": {
			"bsonType": "string",
			"title": "描述",
			"trim": "both",
			"minLength": 10,
			"maxLength": 35
		}
	}
}